<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xp.dao.BlogDao">
    <select id="getAll" resultType="com.xp.pojo.Blog">
        select id,title,content,create_time as createTime,type,author_id as authorId from blog;
    </select>
    <select id="getById" resultType="com.xp.pojo.Blog">
        select id,title,content,create_time as createTime,type,author_id as authorId from blog where id = #{id};
    </select>
    <delete id="deleteById">
        delete from blog where id = #{id};
    </delete>
    <insert id="addBlog">
        insert into blog values(null,#{title},#{content},#{createTime},#{type},#{authorId})
    </insert>
</mapper>